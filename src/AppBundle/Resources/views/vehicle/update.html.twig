{% extends '@App/base.html.twig' %}

{% block content %}
    <h1>Star Rentals</h1>
    <h2>Update vehicle: {{ vehicle.name }}</h2>

    <fieldset>
        {{ form_start(form) }}
            {{ form_row(form.name, { 'label': 'Name' }) }}
            {{ form_row(form.range, { 'label': 'Range' }) }}
            {{ form_row(form.color, { 'label': 'Color' }) }}
            {{ form_row(form.save, { 'label': 'Update' }) }}
        {{ form_end(form) }}
    </fieldset>
{% endblock %}